<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Fuller Stack</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />

  </head>

  <body>
    <div class="wrapper">
      <header class="navbar navbar-dark bg-dark sticky-top">
        <h1>
          <a class="homeBtn" href="/">
            The Fuller Stack
          </a>
        </h1>
          <nav>
            <a class="navbar-toggler d-flex" id="dashboardBtn" href="/">Home Stack</a>
          </nav>
          <nav>
            <div>
              {{#if loggedIn}}
                <a class="navbar-toggler" id="dashboardBtn" href="/dashboard">Your Stack</a>
                <button id="logout" class="navbar-toggler">See Ya!</button>
              {{else}}
                <a class="navbar-toggler" href="/login">login</a>
              {{/if}}
            </div>
          </nav>

      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        <nav class="navbar navbar-expand-lg navbar- bg-dark">
          <a class="navbar-brand text-muted" href="/">How did we stack up?</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a
                  class="nav-link text-muted"
                  href="mailto:aidandefrese@gmail.com"
                >Email</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-muted"
                  href="github.com/AlexDefrese"
                >GitHub</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-muted" href="#">Twitter</a>
              </li>
            </ul>
          </div>
        </nav>
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>